@using System.Security.Cryptography
@using SQLitePCL
@model List<Category>

<style>
    .card-custom {
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .table thead th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .btn-rounded {
        border-radius: 8px;
    }
</style>

<div class="container mt-4">
    <div class="card card-custom">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col-6">
                    <h4 class="text-primary mb-0">Category List</h4>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Category"
                       asp-action="Create"
                       class="btn btn-primary btn-rounded">
                        <i class="bi bi-plus-circle me-1"></i>
                        Create New Category
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td class="align-middle">@obj.Name</td>
                            <td class="align-middle">@obj.DisplayOrder Order</td>
                            <td class="align-middle text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category"
                                       asp-action="Edit"
                                       asp-route-id="@obj.Id"
                                       class="btn btn-outline-primary btn-sm btn-rounded me-2">
                                        <i class="bi bi-pen"></i> Edit
                                    </a>
                                    <a asp-controller="Category"
                                       asp-action="Delete"
                                       asp-route-id="@obj.Id"
                                       class="btn btn-outline-danger btn-sm btn-rounded">
                                        <i class="bi bi-trash3"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
