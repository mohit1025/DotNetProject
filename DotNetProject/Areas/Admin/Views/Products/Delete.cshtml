@using Web.Models
@model Products

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-4 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input disabled asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea disabled asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="ISBN"></label>
                <input disabled asp-for="ISBN" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Author"></label>
                <input disabled asp-for="Author" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Price"></label>
                <input disabled asp-for="Price" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-dark form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
